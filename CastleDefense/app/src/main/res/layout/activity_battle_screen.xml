<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/battle_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alber.castledefense.BattleScreenActivity">

    <TextView
        android:id="@+id/round_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/pause_button"
        android:layout_marginTop="21dp"
        android:text="Wave: " />

    <TextView
        android:id="@+id/wave_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/exit_button"
        android:layout_alignBottom="@+id/exit_button"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/round_text"
        android:text="0" />

    <Button
        android:id="@+id/pause_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:text="Pause" />

    <Button
        android:id="@+id/exit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/round_text"
        android:layout_alignBottom="@+id/round_text"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Exit" />

    <TextView
        android:id="@+id/pause_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:alpha="0"
        android:text="Paused" />

    <Button
        android:id="@+id/next_round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pause_button"
        android:layout_alignBottom="@+id/pause_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="End Wave" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/exit_button"
        android:layout_alignBottom="@+id/exit_button"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@+id/pause_button"
        android:text="Enemies: " />

    <TextView
        android:id="@+id/enemy_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/exit_button"
        android:layout_alignBottom="@+id/exit_button"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/start_wave"
        android:text="0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/enemy_amount"
        android:layout_alignBottom="@+id/enemy_amount"
        android:layout_alignStart="@+id/pause_text"
        android:text="Money:" />

    <TextView
        android:id="@+id/money_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toStartOf="@+id/textView4"
        android:text="0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/exit_button"
        android:layout_alignBottom="@+id/exit_button"
        android:layout_marginStart="46dp"
        android:layout_toEndOf="@+id/start_wave"
        android:text="Score:" />

    <TextView
        android:id="@+id/score_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/exit_button"
        android:layout_alignBottom="@+id/exit_button"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@+id/textView4"
        android:text="0" />

    <Button
        android:id="@+id/start_wave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pause_button"
        android:layout_alignBottom="@+id/pause_button"
        android:layout_centerHorizontal="true"
        android:text="Start Wave"
        android:onClick="startButtonClickHandler"/>
</RelativeLayout>
